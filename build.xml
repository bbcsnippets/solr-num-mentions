<project name="solr" basedir=".">

  <property name="build.dir" value="build" />

  <path id="compile.classpath">
    <fileset dir="lib">
      <include name="**/*.jar"/>
    </fileset>
    <pathelement location="${build.dir}" />
    <pathelement location="solr" />
  </path>

  <target name="clean">
    <delete dir="${build.dir}" />
  </target>

  <target name="setup">
    <mkdir dir="${build.dir}" />
  </target>

  <target name="compile" depends="clean, setup">
    <javac srcdir="src" destdir="${build.dir}" includeantruntime="false">
      <classpath refid="compile.classpath" />
    </javac>
  </target>

  <target name="test" depends="compile">
    <junit printsummary="yes" haltonfailure="yes" showoutput="true">
      <classpath refid="compile.classpath"/>
      <batchtest fork="yes">
        <fileset dir="src">
          <include name="**/*Test.java"/>
        </fileset>
      </batchtest>
    </junit>
  </target>

</project>